<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_button">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#05AAD5</item>
    </style>
    <style name="calendar_day_of_month">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#4A4A4A</item>
    </style>
    <style name="calendar_header_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="calendar_days_of_week">
        <item name="android:layout_width">39dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#808080</item>
    </style>
</resources>
